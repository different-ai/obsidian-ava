{
  "hosting": [
    {
      "public": "public",
      "target": "api",
      "ignore": [
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "/v1/image/create",
          "run": {
            "serviceId": "obsidian-ai",
            "region": "us-central1"
          }
        },
        {
          "source": "/v1/text/create",
          "run": {
            "serviceId": "obsidian-ai",
            "region": "us-central1"
          }
        }
      ],
      "trailingSlash": false
    }
  ]
}